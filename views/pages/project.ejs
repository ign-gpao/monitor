<!DOCTYPE html>
<html lang="fr">

<head>

    <title>GPAO - Project</title>

    <%- include ("../partials/head") %>

</head>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <%- include ("../partials/menu/sidebar") %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Information sur le projet : <%= id %></h1>
          </div>

          <%- include ("../partials/menu/topbar") %>

          <% if (locals.project) { %>
          <!-- Content Row -->
          <div class="row">
            <div class="col-lg-3 mb-4">
              <%- include ("../partials/components/project_info") %>
              <%- include ("../partials/components/project_pie") %>
            </div>
            <div class="col-lg-9 mb-4">
              <%- include ("../partials/tab/project_dependencies_tab") %>
              <%- include ("../partials/tab/jobs_of_project_tab") %>
            </div>
          </div>
        </div>
        <!-- /.container-fluid -->
        <% } %>
      </div>
      <!-- End of Main Content -->

      <%- include ("../partials/footer") %>

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Custom scripts for all pages-->
  <script src="<%= base %>/js/sb-admin-2.min.js"></script>

  <!-- Popups Info -->
  <%- include ("../popups/popup_project_status_info") %>
  <%- include ("../popups/popup_job_status_info") %>

</body>
</html>