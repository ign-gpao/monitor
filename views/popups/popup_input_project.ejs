<!-- Ajout de projet via fichier texte -->
<div class="modal fade" id="inputProject" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="importTxtLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="importTxtLabel">Créer un projet directement via la boîte de dialogue</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group row">
                    <div class="col">
                        <label for="projectName">Nom du projet</label>
                        <input type="text" class="form-control" id="projectName" value="projet_sans_titre">
                    </div>
                    <div class="col">
                        <label for="tagsTextArea">Tags (optionnel)</label>
                        <input id="tagsTextArea" type="text" class="form-control" pattern="(\w+,{1}){0,}\w+" aria-label="tag" aria-describedby="invalid-feedback">
                        <div class="invalid-tooltip">Format invalide : chaînes de caractères alphanumériques séparées d'une virgule</div>
                    </div>
                </div>
                 <div class="form-group">
                    <label for="textarea">Commandes</label>
                    <textarea class="form-control" id="textarea" rows="20"></textarea>
                 </div>
                
            </div>
            <div class="modal-footer">
                <button id="createProject" class="btn btn-primary" onclick="textareaSubmited(document.getElementById('projectName').value, document.getElementById('textarea').value, document.getElementById('tagsTextArea').value)">Créer le projet</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

// Validation de l'input tags
$('#tagsTextArea').on('input', function(event) {
    validateTags('tagsTextArea')
});

</script>