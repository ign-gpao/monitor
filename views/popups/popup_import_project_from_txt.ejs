<!-- Ajout de projet via fichier texte -->
<div class="modal fade" id="importTxt" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="importTxtLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="importTxtLabel">Créer un projet à partir d'un fichier texte</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1">Saisir les tags à attribuer au projet</span>
                    </div>
                    <input id="tagsTxt" type="text" class="form-control" pattern="(\w+,{1}){0,}\w+" placeholder="tag1,tag2" aria-label="tag" aria-describedby="invalid-feedback">
                    <div class="invalid-tooltip">Format invalide : chaînes de caractères alphanumériques séparées d'une virgule</div>
                </div>
                <i>S'applique à toutes les commandes du projet, laisser vide pour n'attribuer aucun tag.</i>
            </div>
            <div class="modal-footer">
                <button id="btn-import" type="submit" class="btn btn-primary" onclick="document.getElementById('file-txt').click();">Importer un fichier texte</button>
                <input id="file-txt" type="file" accept=".txt" name="name" onchange="txtChanged(this.files[0],document.getElementById('tagsTxt').value)" style="display: none;" />
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

// Validation de l'input tags
$('#tagsTxt').on('input', function(event) {
    validateTags('tagsTxt')
});

</script>