            <button type="button" class="btn btn-primary " onclick="javascript:document.getElementById('file-txt').click();">Importer un fichier texte</button>
            <input id="file-txt" type="file" name="name" onchange="txtChanged(this.files[0],document.getElementById('tags').value)" style="display: none;" />
